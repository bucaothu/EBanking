<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bank.EBanking" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.EBanking" >
        <activity android:name="com.bank.ebanking.intent.IntentLogin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bank.ebanking.intent.IntentMainScreen" />
        <activity android:name="com.bank.ebanking.intent.IntentBankAccount" />
        <activity android:name="com.bank.ebanking.intent.IntentSignUp" />
        <activity android:name="com.bank.ebanking.intent.IntentPinInput" />
        <activity android:name="com.bank.ebanking.intent.IntentTransferMain" />
        <activity android:name="com.bank.ebanking.intent.IntentTransferDetails" />
    </application>

</manifest>