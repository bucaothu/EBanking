<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách giao dịch"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#7E48E5"
        android:paddingHorizontal="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <!-- LinearLayout to contain all TextViews and the View -->
    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="40dp"
        android:layout_marginTop="15dp">


        <!-- Ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày:"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YYYY-MM-DD"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Mô Tả -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_description_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mô Tả:"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_description_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết giao dịch"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Từ Tài Khoản -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_from_account_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Từ Tài Khoản:"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_from_account_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Đến Tài Khoản -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_to_account_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đến Tài Khoản:"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_to_account_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Thông Tin Người Dùng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_info_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên người nhận:"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_user_info_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Người Dùng"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>

        <View
            android:id="@+id/breakBar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_amount_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số Tiền:"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_amount_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00₫"
                android:textSize="25sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cbtn_finish_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_background"
        android:text="Sao kê"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutContainer"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
