<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/pin_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your PIN code"
        android:textSize="18sp"
        android:textColor="#8240FF"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/pin_circles_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/pin_digit_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pin_circle"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext"/>

            <View
                android:id="@+id/pin_indicator_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/pin_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/pin_digit_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pin_circle"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext"/>

            <View
                android:id="@+id/pin_indicator_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/pin_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/pin_digit_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pin_circle"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext" />

            <View
                android:id="@+id/pin_indicator_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/pin_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/pin_digit_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pin_circle"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext" />

            <View
                android:id="@+id/pin_indicator_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/pin_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/pin_digit_5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pin_circle"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext" />

            <View
                android:id="@+id/pin_indicator_5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/pin_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <EditText
                android:id="@+id/pin_digit_6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pin_circle"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone" />

            <View
                android:id="@+id/pin_indicator_6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/pin_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:padding="16dp"
        android:layout_marginBottom="8dp" />
</LinearLayout>
